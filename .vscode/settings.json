{
  /* ===================================================== */
  /* üß† EDITOR CORE ‚Äî Precisi√≥n, velocidad y limpieza */
  /* ===================================================== */

  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": false,
  "editor.wordWrap": "on",
  "editor.formatOnSave": true,
  "editor.formatOnPaste": true,
  "editor.minimap.enabled": false,
  "editor.renderWhitespace": "selection",
  "editor.cursorSmoothCaretAnimation": "on",
  "editor.smoothScrolling": true,
  "editor.linkedEditing": true,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": true,
  "editor.stickyScroll.enabled": true,
  "editor.snippetSuggestions": "top",
  "editor.quickSuggestionsDelay": 0,
  "editor.inlineSuggest.enabled": true,

  /* ===================================================== */
  /* üé® FORMATEO PROFESIONAL (Prettier como est√°ndar) */
  /* ===================================================== */

  "editor.defaultFormatter": "esbenp.prettier-vscode",

  "[html]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[css]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[javascript]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[json]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },

  "prettier.singleQuote": true,
  "prettier.semi": false,
  "prettier.printWidth": 100,
  "prettier.trailingComma": "es5",

  /* ===================================================== */
  /* ‚ö° JAVASCRIPT & ARQUITECTURA MODULAR */
  /* ===================================================== */

  "javascript.updateImportsOnFileMove.enabled": "always",
  "javascript.suggest.autoImports": true,
  "javascript.validate.enable": true,
  "typescript.validate.enable": true,

  "editor.codeActionsOnSave": {
    "source.organizeImports": "explicit",
    "source.fixAll.eslint": "explicit"
  },

  /* ===================================================== */
  /* üé® HTML + EM–º–µ—Ç ‚Äî velocidad de maquetaci√≥n */
  /* ===================================================== */

  "html.format.wrapLineLength": 120,
  "html.format.indentInnerHtml": true,
  "html.autoClosingTags": true,
  "html.autoCreateQuotes": true,

  "emmet.includeLanguages": {
    "javascript": "javascriptreact",
    "typescriptreact": "html",
    "vue-html": "html"
  },
  "emmet.triggerExpansionOnTab": true,

  /* ===================================================== */
  /* üé® CSS / SCSS profesional */
  /* ===================================================== */

  "css.validate": true,
  "scss.validate": true,
  "less.validate": true,
  "css.lint.unknownAtRules": "ignore",

  /* ===================================================== */
  /* üìÇ EXPLORADOR LIMPIO Y ESCALABLE */
  /* ===================================================== */

  "explorer.compactFolders": false,

  "files.autoSave": "onFocusChange",

  "files.exclude": {
    "**/.git": true,
    "**/.DS_Store": true,
    "**/node_modules": true,
    "**/dist": true
  },

  "search.exclude": {
    "**/node_modules": true,
    "**/dist": true
  },

  /* ===================================================== */
  /* üöÄ LIVE SERVER OPTIMIZADO PARA LANDINGS */
  /* ===================================================== */

  "liveServer.settings.port": 5500,
  "liveServer.settings.wait": 300,
  "liveServer.settings.donotShowInfoMsg": true,
  "liveServer.settings.ignoreFiles": ["**/.vscode/**", "**/*.scss"],

  /* ===================================================== */
  /* üß± JSON MAESTRO (Index.json din√°mico) */
  /* ===================================================== */

  "json.format.enable": true,
  "json.schemaDownload.enable": true,
  "editor.quickSuggestions": {
    "strings": true
  },

  /* ===================================================== */
  /* üß™ TERMINAL PROFESIONAL */
  /* ===================================================== */

  "terminal.integrated.fontSize": 14,
  "terminal.integrated.scrollback": 10000,
  "terminal.integrated.defaultProfile.windows": "PowerShell",

  /* ===================================================== */
  /* üî• GIT FLUIDO */
  /* ===================================================== */

  "git.enableSmartCommit": true,
  "git.autofetch": true,
  "git.confirmSync": false,

  /* ===================================================== */
  /* üé® ENTORNO VISUAL PROFESIONAL */
  /* ===================================================== */

  "workbench.startupEditor": "none",
  "workbench.colorTheme": "Default Dark+",
  "workbench.iconTheme": "material-icon-theme",
  "workbench.editor.enablePreview": false,
  "workbench.sideBar.location": "left",
  "workbench.statusBar.visible": true,
  "breadcrumbs.enabled": true,

  /* ===================================================== */
  /* üî§ TIPOGRAF√çA DE DESARROLLADOR */
  /* ===================================================== */

  "editor.fontFamily": "Fira Code, Consolas, 'Courier New', monospace",
  "editor.fontLigatures": true
}
